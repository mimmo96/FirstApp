        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/umidmin" />

    <EditText
        android:id="@+id/condmin"
